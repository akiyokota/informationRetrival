    if (typeof hipmunk_load_widget == 'function') {
        hipmunk_load_widget("INLINE", "#inlinewidget");
    } else {
        jQuery.getScript("https://www.hipmunk.com/search_widget_embedded.js?referer=about.com&size=640x240", function(){
            hipmunk_load_widget("INLINE", "#inlinewidget");
        });
    }
}

